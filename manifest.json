{
  "manifest_version": 3,
  "name": "NotebookLM Cuestionario Desiderativo",
  "version": "1.7",
  "description": "Formulario en pestaña para enviar protocolos a Motor de Análisis y abrir un informe editable listo para PDF al finalizar.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://notebooklm.google.com/*"],
  "action": {
    "default_title": "Abrir formulario"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["notebooklm-content.js"],
      "run_at": "document_idle"
    }
  ]
}